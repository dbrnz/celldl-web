<cell-diagram>
    <background image="./models/multi-neuron-background.svg">
        <region id="u1_pos" region="svg_region_1"/>
        <region id="u2_pos" region="svg_region_2"/>
        <region id="u3_pos" region="svg_region_3"/>
        <region id="u4_pos" region="svg_region_4"/>
        <region id="v4_pos" region="svg_region_5"/>
    </background>
    <bond-graph>
        <potential id="u1"/>
        <potential id="u2"/>
        <potential id="u3"/>
        <potential id="u4"/>
        <flow id="v1">
            <connection input="u1" output="u3"/>
        </flow>
        <flow id="v2">
            <connection input="u2" output="u3"/>
        </flow>
        <flow id="v3">
            <connection input="u3" output="u4"/>
        </flow>
        <flow id="v4">
            <connection input="u4" output="u2"/>
        </flow>
    </bond-graph>
    <style>
        cell-diagram {
            width:  500;  /* SVG 'pixels' */
            height: 500;  /* SVG 'pixels' */
        }
        #u1 { position: #u1_pos; }
        #u2 { position: #u2_pos; }
        #u3 { position: #u3_pos; }
        #u4 { position: #u4_pos; }
        #v1 { position: #u1 #u3; }
        #v2 { position: #u2 #u3; }
        #v3 { position: #u3 #u4; }
        #v4 { position: #v4_pos; }
        connection { line-color: red; }
    </style>
 </cell-diagram>
